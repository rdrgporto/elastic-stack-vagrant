# ======================== Elasticsearch Configuration =========================

# ---------------------------------- Cluster -----------------------------------
#
cluster.name: {{ elasticsearch_cluster_name }}
#
# ------------------------------------ Node ------------------------------------
#
node.name: {{ ansible_hostname }}
node.roles: [ master, data, ingest, transform ]
#
# ----------------------------------- Paths ------------------------------------
#
path.data: /var/lib/elasticsearch
path.logs: /var/log/elasticsearch
#
# ------------------------------- Memory & Cpu ---------------------------------
#
bootstrap.memory_lock: true
#
# ---------------------------------- Network -----------------------------------
#
network.host: "0.0.0.0"
http.port: 9200
#
# --------------------------------- Discovery ----------------------------------
#
discovery.type: single-node
#
# --------------------------------- X-Pack -------------------------------------
#
# License
xpack.license.self_generated.type: basic
# Security
xpack.security.enabled: true
#
# -------------------------------- Certificates --------------------------------
# HTTP (9200)
xpack.security.http.ssl.enabled: true
xpack.security.http.ssl.key: certificates/elasticsearch.key
xpack.security.http.ssl.certificate: certificates/elasticsearch.pem
xpack.security.http.ssl.certificate_authorities: [ "certificates/ca.pem" ]
xpack.security.http.ssl.supported_protocols: [ "TLSv1.3", "TLSv1.2", "TLSv1.1" ]
# Transport (9300)
xpack.security.transport.ssl.enabled: true
xpack.security.transport.ssl.verification_mode: certificate
xpack.security.transport.ssl.key: certificates/elasticsearch.key
xpack.security.transport.ssl.certificate: certificates/elasticsearch.pem
xpack.security.transport.ssl.certificate_authorities: [ "certificates/ca.pem" ]
xpack.security.transport.ssl.supported_protocols: [ "TLSv1.3", "TLSv1.2", "TLSv1.1" ]
