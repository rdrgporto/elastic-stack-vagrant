# Kibana's port
server.port: 5601

# Specifies the address to which the Kibana server will bind
server.host: "0.0.0.0"

# Kibana Public Url
server.publicBaseUrl: "https://localhost:5601"
server.ssl.enabled: true
server.ssl.certificate: /etc/kibana/certificates/kibana.pem
server.ssl.key: /etc/kibana/certificates/kibana.key

# Elasticsearch Nodes
elasticsearch.hosts: "https://localhost:{{ kibana_elasticsearch_port }}"
elasticsearch.username: "{{ kibana_username }}"
elasticsearch.password: "{{ kibana_password }}"
elasticsearch.ssl.verificationMode: certificate
elasticsearch.ssl.certificateAuthorities: "/etc/kibana/certificates/{{ kibana_certificate_ca }}"

# Encryption Keys
xpack.security.encryptionKey: "ovswhfannlajtgvvjewqwgulywdbpudq"
xpack.reporting.encryptionKey: "mevhrpewrtunoakriahdyzowlqlvhjou"
xpack.encryptedSavedObjects.encryptionKey: "ubadnnhnuvgyrxveohfgyxpxokbkdwge"

# Security
xpack.security.secureCookies: true

# Reporting
xpack.reporting.enabled: true
xpack.reporting.csv.enablePanelActionDownload: true
xpack.reporting.capture.browser.chromium.disableSandbox: false
